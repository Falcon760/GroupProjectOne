@model IEnumerable<RecipeApplication.Recipe>


<div class="row">
    <div class="col-md-5">
    @Html.ActionLink("Create New Recipe", "Create")
        @using (Html.BeginForm("Search", "Recipes"))
        {
            @Html.Editor("SearchBox")
            <input type="submit" value="Search" />

        }
    </div>
    <div class="col-md-7" align="left" >
        <h2>Recipe List</h2>
        </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm})
            @*@Html.DisplayNameFor(model => model.Name)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecipeDescription)
        </th>
        <th>
        @Html.ActionLink("Active Prep Time", "Index", new {sortOrder = ViewBag.ActiveParm})
            @*@Html.DisplayNameFor(model => model.PrepTime)*@
        </th>
        <th>
            @Html.ActionLink("Inactive Prep Time", "Index", new { sortOrder = ViewBag.InactiveParm })
            @*@Html.DisplayNameFor(model => model.CookTime)*@
        </th>
        <th>
            @Html.ActionLink("Recipe Category", "Index", new {sortOrder = ViewBag.CategoryParm})
              @*@Html.DisplayNameFor(model => model.RecipeCategory.CatName)*@
        </th>
        <th>
            @Html.ActionLink("Cuisine Type", "Index", new {sortOrder = ViewBag.CuisineTypeParm})
            @*@Html.DisplayNameFor(model => model.CuisineType.Name)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrepTime) minutes
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CookTime) minutes
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.RecipeCategory.CatName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CuisineType.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
